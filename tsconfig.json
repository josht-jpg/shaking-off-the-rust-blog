{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "strict": false,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/**/*",
    "src/**/*",
    "components/articles/BreadthFirstSearch.jsx",
    "components/articles/NaiveBayes.jsx",
    "components/articles/DnaSearch.jsx",
    "components/articles/ComplexNumbers.jsx"
  ],
  "exclude": ["node_modules"]
}
